{
  "extends": "../tsconfig.base.json",
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"], // Include libraries required for frontend

    "allowJs": true, // Allow JavaScript files
    "noEmit": true, // Do not emit any files, useful for type checking only
    "module": "esnext", // Use ESNext modules for frontend
    "moduleResolution": "bundler", // Module resolution for bundlers (like Webpack)
    "resolveJsonModule": true, // Allow importing JSON files as modules
    "isolatedModules": true, // Ensure every file can be safely transpiled independently
    "jsx": "preserve", // Preserve JSX for further processing (e.g., by Babel)
    "incremental": true, // Enable incremental compilation for faster builds
    "plugins": [
      { "name": "next" } // Add support for Next.js
    ]
  },
  "include": [
    "next-env.d.ts", // Include Next.js environment types
    "**/*.ts", // Include all TypeScript files
    "**/*.tsx", // Include all TypeScript JSX files
    ".next/types/**/*.ts", // Include types generated by Next.js
    "src/app/contexts/AudioContext.tsx", // Include specific files that are part of the app
    "src/lib/audio/CustomSampler.ts", // Include additional specific files
    "../shared/types/audioTypes.ts" // Import shared audio-related types
  ],
  "exclude": ["node_modules"] // Exclude node_modules
}

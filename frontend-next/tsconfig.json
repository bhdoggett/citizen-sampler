{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "noEmit": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "paths": {
      "src/*": ["./src/*"],
      "@shared/*": ["../shared/*"]
    },
    "plugins": [
      {
        "name": "next"
      }
    ],
    "experimentalDecorators": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/contexts/AudioContext.tsx",
    "src/lib/audio/CustomSampler.ts",
    "../shared/types/audioTypes.ts",
    ".next/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

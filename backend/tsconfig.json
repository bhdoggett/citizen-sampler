{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "../",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "typeRoots": ["./types", "./node_modules/@types"],
    "types": ["node"]
  },
  "include": ["src/**/*", "../shared/**/*", "../frontend"],
  "exclude": ["node_modules"]
}
